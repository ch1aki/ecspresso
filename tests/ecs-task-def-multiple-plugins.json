{
  "containerDefinitions": [
    {
      "cpu": 1024,
      "essential": true,
      "image": "{{ tfstate `aws_ecr_repository.all['app'].repository_url` }}:{{ must_env `TAG` }}",
      "memory": 1024,
      "name": "app",
      "environment": [
        {
          "name": "JSON",
          "value": "{{ env `JSON` | json_escape }}"
        },
        {
          "name": "S3_URL",
          "value": "s3://{{ bucket_tfstate `aws_s3_bucket.main.bucket` }}/"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ]
    }
  ],
  "family": "app",
  "requiresCompatibilities": [
    "EC2"
  ],
  "tags": [
    {
      "key": "Name",
      "value": "test"
    },
    {
      "key": "ecspresso:ignore",
      "value": "true"
    }
  ]
}
